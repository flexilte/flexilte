{
	"name": "@flexilte/docs",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run postbuild",
		"postbuild": "cp ../../packages/core/schema.json ./build/schema.json",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check --write . && eslint .",
		"format": "prettier --write . && eslint --fix ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@vitest/browser": "^3.2.3",
		"eslint-plugin-better-tailwindcss": "^3.7.6",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.13.2",
		"flowbite-svelte-icons": "^3.0.0",
		"svelte": "^5.25.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"type": "module",
	"dependencies": {
		"@flexilte/core": "workspace:^",
		"@iconify/svelte": "^5.0.1",
		"svelte-highlight": "^7.8.3",
		"tailwind-variants": "^3.1.0"
	}
}
