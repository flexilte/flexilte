{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "FlexilteLayout",
	"description": "JSON Schema for FlexilteLayout type.",
	"additionalProperties": false,
	"type": "object",
	"properties": {
		"$schema": { "type": "string" },
		"id": { "type": "string" },
		"posX": { "type": "string", "enum": ["left", "right", "middle"] },
		"posY": { "type": "string", "enum": ["top", "bottom", "middle"] },
		"width": {
			"oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
		},
		"gap": {
			"oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
		},
		"nodeClass": {
			"oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
		},
		"layoutClass": {
			"oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
		},
		"wrap": { "type": "string", "enum": ["wrap", "nowrap"] },
		"component": { "type": "string" },
		"props": { "type": "object" },
		"cols": {
			"type": "array",
			"items": { "$ref": "#" }
		},
		"rows": {
			"type": "array",
			"items": { "$ref": "#" }
		}
	},
	"oneOf": [
		{
			"required": ["component"],
			"not": { "anyOf": [{ "required": ["cols"] }, { "required": ["rows"] }] }
		},
		{
			"not": { "anyOf": [{ "required": ["component"] }, { "required": ["props"] }] },
			"anyOf": [{ "required": ["cols"] }, { "required": ["rows"] }]
		}
	]
}
